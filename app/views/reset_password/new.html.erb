<div id="container">
	<div class="registerbox">
		<h1 class="register">Reset your password</h1>
	</div>
		<div class="form">

		<%= form_for @user, url: new_reset_password_path do |f| %>


    	<div class="field">
      <%= f.text_field :email, placeholder: "Your email address", class: 'form-input' %>
    </div>
	<div class="actions">
      <%= f.submit "Reset Password", class: "submitbutton" %>
    </div>
 <% end %>

 </div>
</div>