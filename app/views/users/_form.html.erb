    <%= f.text_field :email, placeholder: 'Email', class: 'form-input' %>
  </div>
  <div class="field">
    <%= f.text_field :username, placeholder: 'Username', class: 'form-input' %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: 'Password', class: 'form-input' %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: 'Confirm password', class: 'form-input' %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, class: 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.text_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :agree %><br>
    <%= f.check_box :agree %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
